<p>
  <strong>Title: </strong>
  <%= @question.title %>
</p>

<p>
  <strong>Body: </strong>
  <%= @question.body %>
</p>

<h2>Answers: </h2>
  <% @question.answers.each do |answer| %>
    <p>
      <strong>Answerer: </strong>
      <%= answer.answerer %>
    </p>
    <p>
      <strong>Answer: </strong>
      <%= answer.body %>
    </p>

  <% end %>

<h2>Add an answer: </h2>
<%= form_for ([@question, @question.answers.build]) do |f| %>

  <p>
    <%= f.label :answerer %><br>
    <%= f.text_field :answerer %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
